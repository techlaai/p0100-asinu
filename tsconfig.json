{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2017",
    "downlevelIteration": true,
    "paths": {
      "@packages/ai/*": [
        "packages/ai/src/*"
      ],
      "@packages/core/*": [
        "packages/core/src/*"
      ],
      "@packages/infra/*": [
        "packages/infra/src/*"
      ],
      "@/*": [
        "./src/*"
      ],
      "@/packages/*": [
        "packages/*/src"
      ],
      "@ui/*": [
        "./src/interfaces/ui/*"
      ],

      "@api/*": [
        "./src/interfaces/api/*"
      ],

      "@components/*": [
        "./src/interfaces/ui/components/*"
      ],
      "@styles/*": [
        "./src/interfaces/ui/styles/*"
      ],
      "@config/*": [
        "./config/*"
      ]
    },
    "lib": [
      "DOM",
      "ES2022"
    ],
    "types": [
      "node"
    ],
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "types/**/*.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "tests",
    "scripts",
    "apps",
    "packages"
  ]
}
